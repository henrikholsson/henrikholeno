---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post: CollectionEntry<'posts'>) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article class="post">
    <header>
      <h1>{post.data.title}</h1>
      <div class="post-meta">
        <p class="author">By {post.data.author}</p>
        <p class="date">{new Date(post.data.date).toLocaleDateString()}</p>
      </div>
    </header>
    <div class="content">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 5%;
  }

  header {
    margin: 0 0 3rem 0;
  }

  h1 {
    font-size: 3rem;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    color: var(--accent);
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    font-size: 1rem;
  }

  .author {
    color: var(--text-main);
    font-weight: 500;
  }

  .date {
    color: var(--text-muted);
    position: relative;
    padding-left: 1rem;
  }

  .date::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--text-muted);
  }

  .content {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--text-main);
  }

  /* Remove default margins from markdown content */
  .content :global(h1:first-child) {
    margin-top: 0;
    font-size: 2.5rem;
    line-height: 1.2;
    color: var(--accent);
  }

  .content :global(h2) {
    font-size: 2rem;
    margin: 2.5rem 0 1.5rem;
    line-height: 1.3;
    color: var(--accent);
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--text-main);
  }

  .content :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .content :global(a:hover) {
    color: var(--accent-light);
  }

  /* Default single image style */
  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2.5rem auto;
    display: block;
  }

  /* Image grid layouts */
  .content :global(.image-grid) {
    display: grid;
    gap: 1rem;
    margin: 2.5rem 0;
  }

  .content :global(.image-grid.two-col) {
    grid-template-columns: repeat(2, 1fr);
  }

  .content :global(.image-grid.three-col) {
    grid-template-columns: repeat(3, 1fr);
  }

  .content :global(.image-grid img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin: 0;
    border-radius: 8px;
  }

  /* Optional image captions */
  .content :global(.image-caption) {
    text-align: center;
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-top: 0.5rem;
    font-style: italic;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .content :global(.image-grid.three-col) {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .content :global(.image-grid.two-col),
    .content :global(.image-grid.three-col) {
      grid-template-columns: 1fr;
    }
  }

  .content :global(p img) {
    margin: 2rem 0;
  }

  .content :global(ul), .content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    color: var(--text-main);
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1.5rem;
    margin: 2rem 0;
    color: var(--text-muted);
  }

  .content :global(code) {
    background: var(--bg-muted);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--accent);
  }

  .content :global(pre) {
    background: var(--bg-muted);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    font-size: 0.9em;
    color: var(--text-main);
  }

  .post-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 5%;
  }
</style> 